pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git url:'https://github.com/tavaresvieira/conversao-temperatura.git', branch: 'main' 
                
            }
        }

        stage ('Build Image'){
            steps {
                script {
                    dockerapp = docker.build("diogotavaresvieira/conversao-temperatura:${env.BUILD_ID}",
                     '-f ./src/Dockerfile ./src')
                }
            }
        }
    }
}
